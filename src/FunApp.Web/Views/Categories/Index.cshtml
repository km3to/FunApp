@model IEnumerable<FunApp.Models.ViewModels.Jokes.IdAndNameViewModel>

@{
    this.ViewData["Title"] = "Categories";
}

<h1>@this.ViewData["Title"]</h1>

<div>
    @foreach (var category in this.Model)
    {
        <a asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id">@category.Name</a>
        <hr />
    }
</div>